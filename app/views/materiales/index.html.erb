<%= content_for :title, "Materiales" %>

<% content_for :breadcrumb do %>

<% end %>

<% content_for :main_content do %>

<h1>Listing materiales</h1>

<table id="tabla_materiales" class="display">
 <thead> 
  <tr>
    <th>Nombre</th>
    <th>Disponible</th>
    <th>Descripcion</th>
    <th>Codigo</th>
    <th>Laboratorio</th>
    <th>Nuevo</th>
    <th>Usado</th>
    <th>Danado</th>
    <th>Dano</th>
    <th class="accion"></th>
    <th class="accion"></th>
    <th class="accion"></th>
  </tr>
 </thead>
<tbody>
<% @materiales.each do |material| %>
  <tr>
    <td><%= link_to material.nombre, material %></td>
    <td><%= material.disponible %></td>
    <td><%= material.descripcion %></td>
    <td><%= material.codigo %></td>
    <td><%= material.laboratorio.nombre %></td>
    <td><%= material.nuevo %></td>
    <td><%= material.usado %></td>
    <td><%= material.danado %></td>
    <td><%= material.dano %></td>
    <td class="accion"><%= link_to 'Historial', "historial_material/#{material.id}" %></td>
    <td class="accion"><%= link_to 'Edit', edit_material_path(material) %></td>
    <td class="accion"><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Material', new_material_path %>

<% end %>
